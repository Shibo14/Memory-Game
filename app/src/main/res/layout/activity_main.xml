                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFruit12"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
